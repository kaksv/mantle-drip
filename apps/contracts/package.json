{
  "name": "hardhat",
  "version": "1.0.0",
  "description": "Smart contracts for my-celo-app",
  "main": "index.js",
  "scripts": {
    "build": "hardhat compile",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat ignition deploy ignition/modules/Drip.ts",
    "deploy:alfajores": "hardhat ignition deploy ignition/modules/Drip.ts --network alfajores",
    "deploy:sepolia": "hardhat ignition deploy ignition/modules/Drip.ts --network sepolia",
    "deploy:celo": "hardhat ignition deploy ignition/modules/Drip.ts --network celo",
    "deploy:celo:mainnet": "hardhat ignition deploy ignition/modules/Drip.ts --network celo && node update-frontend-config.js 42220",
    "deploy:proxy": "hardhat run scripts/deploy-proxy.ts",
    "deploy:proxy:alfajores": "hardhat run scripts/deploy-proxy.ts --network alfajores",
    "deploy:proxy:sepolia": "hardhat run scripts/deploy-proxy.ts --network sepolia",
    "deploy:proxy:celo": "hardhat run scripts/deploy-proxy.ts --network celo",
    "deploy:proxy:celo:mainnet": "hardhat run scripts/deploy-proxy.ts --network celo && node update-frontend-config.js 42220",
    "deploy:proxy:lisk": "hardhat run scripts/deploy-proxy.ts --network lisk",
    "deploy:proxy:lisk:mainnet": "hardhat run scripts/deploy-proxy.ts --network lisk && node update-frontend-config.js 1135",
    "deploy:gdollar:sepolia": "hardhat run scripts/deploy-test-gdollar.ts --network sepolia",
    "mint:gdollar:sepolia": "hardhat run scripts/mint-gdollar.ts --network sepolia",
    "upgrade": "hardhat run scripts/upgrade-proxy.ts",
    "verify": "hardhat verify",
    "verify:sourcify": "ts-node scripts/verify-sourcify.ts",
    "clean": "hardhat clean",
    "typechain": "hardhat typechain"
  },
  "keywords": [
    "hardhat",
    "ethereum",
    "celo",
    "smart-contracts",
    "solidity"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-ignition": "^0.15.15",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.16",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.5.0",
    "dotenv": "^16.6.1",
    "ethers": "^6.16.0",
    "hardhat": "^2.27.1",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3",
    "viem": "^2.41.2"
  }
}
